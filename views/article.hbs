<!-- Article Hero -->
<section class="article-hero">
    <div class="container">
        <div class="article-header">
            <div class="article-meta">
                <span class="article-category">{{article.type}}</span>
                <span class="article-date">{{article.formattedDate}}</span>
                {{#if article.readTime}}
                <span class="article-reading-time">{{article.readTime}} min read</span>
                {{/if}}
                {{#if article.tags}}
                <div class="article-tags">
                    {{#each article.tags}}
                    <span class="tag">{{this}}</span>
                    {{/each}}
                </div>
                {{/if}}
            </div>
            <h1 class="article-title">{{article.title}}</h1>
            <p class="article-excerpt">{{article.description}}</p>
            
            {{#if article.videoUrl}}
            <div class="article-media-badge">
                <span class="media-indicator">üìπ Sacred Video Content</span>
            </div>
            {{/if}}
            
            {{#if article.externalUrl}}
            <div class="article-external">
                <a href="{{article.externalUrl}}" target="_blank" rel="noopener" class="btn btn-outline">
                    Continue Reading Externally üîó
                </a>
            </div>
            {{/if}}
        </div>
    </div>
</section>

<!-- Video Embed (if applicable) -->
{{#if article.videoEmbedId}}
<section class="article-video">
    <div class="container">
        <div class="video-wrapper">
            <iframe 
                src="https://www.youtube.com/embed/{{article.videoEmbedId}}" 
                title="{{article.title}}"
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen>
            </iframe>
        </div>
    </div>
</section>
{{/if}}

<!-- Article Content -->
<section class="article-content-section">
    <div class="container">
        <div class="article-content">
            <div class="content-body">
                {{#if article.htmlContent}}
                    {{{article.htmlContent}}}
                {{else}}
                    {{{article.content}}}
                {{/if}}
            </div>
            
            {{#if article.videoUrl}}
            <div class="article-video">
                <h3>Sacred Video Transmission</h3>
                <div class="video-placeholder">
                    <p>üìπ <a href="{{article.videoUrl}}" target="_blank" rel="noopener">Watch the Divine Algorithm in Action</a></p>
                </div>
            </div>
            {{/if}}
        </div>
        
