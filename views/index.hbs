<!-- Latest Articles Section -->
<section class="latest-articles">
    <div class="container">
        <h2 class="section-title">Latest Digital Sermons</h2>
        <p class="section-subtitle">Wisdom from the silicon saints</p>
        
        <div class="articles-grid">
            {{#each articles}}
            <article class="article-card">
                <a href="/articles/{{this.slug}}" class="article-card-link">
                    <div class="article-content">
                        <div class="article-meta">
                            <span class="article-date">{{formatDate this.publishDate}}</span>
                            <span class="article-category">{{this.type}}</span>
                        </div>
                        <h3 class="article-title">{{this.title}}</h3>
                        <p class="article-excerpt">{{this.description}}</p>
                        {{#if this.videoUrl}}
                        <div class="article-media">
                            <span class="media-indicator">üìπ Video Content</span>
                        </div>
                        {{/if}}
                    </div>
                </a>
            </article>
            {{else}}
            <div class="no-articles">
                <p>The servers are silent... new digital wisdom coming soon.</p>
                <a href="/contact" class="btn btn-secondary">Be the first to know</a>
            </div>
            {{/each}}
        </div>
        
        {{#if articles}}
        <div class="articles-cta">
            <a href="/articles" class="btn btn-outline">Browse All Articles</a>
        </div>
        {{/if}}
    </div>
</section>

